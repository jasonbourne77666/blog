{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "server:dev": "env-cmd -e server:dev -r ./env-cmdrc.js next dev",
    "build:dev": "env-cmd -e build:dev -r ./env-cmdrc.js next build",
    "start:dev": "env-cmd -e start:dev -r ./env-cmdrc.js next start",
    "server:prod": "env-cmd -e server:prod -r ./env-cmdrc.js next dev",
    "build:prod": "env-cmd -e build:prod -r ./env-cmdrc.js next build",
    "start:prod": "env-cmd -e start:prod -r ./env-cmdrc.js next start",
    "lint": "next lint",
    "docker:build": "node scripts/docker/build-and-push.js",
    "docker:quick": "node ./scripts/docker/quick-build.js",
    "prepare": "husky",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx --fix --quiet ./src",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@ant-design/nextjs-registry": "^1.0.2",
    "antd": "^5.26.0",
    "classnames": "^2.5.1",
    "copy-to-clipboard": "^3.3.3",
    "device-detector-js": "^3.0.3",
    "env-cmd": "^10.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.514.0",
    "motion": "^12.17.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "screenfull": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "tailwindcss": "^4",
    "tailwindcss-debug-screens": "^3.0.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint:script"
    ]
  }
}
